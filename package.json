{
  "name": "passablebeers",
  "version": "1.0.0",
  "description": "Simple template server for static site",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "compile-sass": "node-sass src/public/stylesheets/main.scss dist/public/stylesheets/main.css --style compressed",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc compile-sass copy-assets",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,html,scss --exec npm run dev:start",
    "prod": "nodemon ./dist/index.js",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thejaffe/PassableBeerReviews.git"
  },
  "keywords": [],
  "author": "Jeremy Trantham",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thejaffe/PassableBeerReviews/issues"
  },
  "homepage": "https://github.com/thejaffe/PassableBeerReviews#readme",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "sanitize-html": "^1.20.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/dotenv": "^6.1.0",
    "@types/ejs": "^2.6.1",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/node": "^10.12.18",
    "@types/sanitize-html": "^1.18.2",
    "@types/serve-favicon": "^2.2.30",
    "@types/shelljs": "^0.8.1",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-csso": "^3.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-sass": "^4.0.2",
    "gulp-typescript": "^5.0.0",
    "gulp-uglify": "^3.0.1",
    "gulp-uglify-es": "^1.0.4",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  }
}
